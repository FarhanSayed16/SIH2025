{
  "info": {
    "name": "Kavach Backend API",
    "description": "Disaster Preparedness and Response Education System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "schoolId",
      "value": "",
      "type": "string"
    },
    {
      "key": "deviceToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health & Metrics",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Get Metrics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/metrics",
              "host": ["{{baseUrl}}"],
              "path": ["api", "metrics"]
            }
          }
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', jsonData.data.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', jsonData.data.refreshToken);",
                  "    pm.collectionVariables.set('userId', jsonData.data.user._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"Test123!@#\",\n  \"name\": \"Test User\",\n  \"role\": \"student\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', jsonData.data.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', jsonData.data.refreshToken);",
                  "    pm.collectionVariables.set('userId', jsonData.data.user._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"Test123!@#\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "refresh"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "profile"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{userId}}"]
            }
          }
        },
        {
          "name": "Update User Location",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"lat\": 30.0,\n  \"lng\": 75.0\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}/location",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{userId}}", "location"]
            }
          }
        },
        {
          "name": "Update Safety Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"safe\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}/safety-status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{userId}}", "safety-status"]
            }
          }
        }
      ]
    },
    {
      "name": "Schools",
      "item": [
        {
          "name": "List Schools",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/schools?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "schools"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Find Nearest Schools",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/schools/nearest?lat=30.0&long=75.0&maxDistance=5000",
              "host": ["{{baseUrl}}"],
              "path": ["api", "schools", "nearest"],
              "query": [
                {
                  "key": "lat",
                  "value": "30.0"
                },
                {
                  "key": "long",
                  "value": "75.0"
                },
                {
                  "key": "maxDistance",
                  "value": "5000"
                }
              ]
            }
          }
        },
        {
          "name": "Create School",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test School\",\n  \"address\": \"123 Test Street\",\n  \"location\": {\n    \"type\": \"Point\",\n    \"coordinates\": [75.0, 30.0]\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/schools",
              "host": ["{{baseUrl}}"],
              "path": ["api", "schools"]
            }
          }
        }
      ]
    },
    {
      "name": "Drills",
      "item": [
        {
          "name": "List Drills",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/drills?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "drills"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Schedule Drill",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"fire\",\n  \"scheduledAt\": \"2024-12-31T10:00:00Z\",\n  \"institutionId\": \"{{schoolId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/drills",
              "host": ["{{baseUrl}}"],
              "path": ["api", "drills"]
            }
          }
        },
        {
          "name": "Trigger Drill",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/drills/:id/trigger",
              "host": ["{{baseUrl}}"],
              "path": ["api", "drills", ":id", "trigger"]
            }
          }
        }
      ]
    },
    {
      "name": "Alerts",
      "item": [
        {
          "name": "List Alerts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/alerts?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "alerts"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Create Alert",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"fire\",\n  \"title\": \"Fire Alert\",\n  \"description\": \"Fire detected in building\",\n  \"severity\": \"high\",\n  \"institutionId\": \"{{schoolId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/alerts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "alerts"]
            }
          }
        }
      ]
    },
    {
      "name": "Devices (IoT)",
      "item": [
        {
          "name": "Register Device",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('deviceToken', jsonData.data.deviceToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"deviceId\": \"ESP32-001\",\n  \"type\": \"fire-sensor\",\n  \"name\": \"Fire Sensor 1\",\n  \"institutionId\": \"{{schoolId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/devices/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "devices", "register"]
            }
          }
        },
        {
          "name": "Send Telemetry",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Device-Token",
                "value": "{{deviceToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"smoke\": 250,\n    \"temperature\": 45\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/devices/:deviceId/telemetry",
              "host": ["{{baseUrl}}"],
              "path": ["api", "devices", ":deviceId", "telemetry"]
            }
          }
        },
        {
          "name": "Device Alert",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Device-Token",
                "value": "{{deviceToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"fire\",\n  \"severity\": \"high\",\n  \"title\": \"Fire Detected\",\n  \"description\": \"Smoke sensor triggered\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/devices/:deviceId/alert",
              "host": ["{{baseUrl}}"],
              "path": ["api", "devices", ":deviceId", "alert"]
            }
          }
        }
      ]
    },
    {
      "name": "AI",
      "item": [
        {
          "name": "Analyze Hazard",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"image\": \"base64_encoded_image_here\",\n  \"mimeType\": \"image/jpeg\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/ai/analyze",
              "host": ["{{baseUrl}}"],
              "path": ["api", "ai", "analyze"]
            }
          }
        }
      ]
    },
    {
      "name": "Sync",
      "item": [
        {
          "name": "Sync Offline Data",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quizzes\": [\n    {\n      \"moduleId\": \"module_id_here\",\n      \"score\": 85,\n      \"answers\": [],\n      \"completedAt\": \"2024-01-15T10:00:00Z\"\n    }\n  ],\n  \"drillLogs\": [\n    {\n      \"drillId\": \"drill_id_here\",\n      \"evacuationTime\": 120,\n      \"completedAt\": \"2024-01-15T10:00:00Z\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/sync",
              "host": ["{{baseUrl}}"],
              "path": ["api", "sync"]
            }
          }
        }
      ]
    }
  ]
}

