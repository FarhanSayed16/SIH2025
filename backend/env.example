# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/kavach?retryWrites=true&w=majority
# For local MongoDB: mongodb://localhost:27017/kavach

# JWT Configuration (REQUIRED - Server will not start without JWT_SECRET)
# CRITICAL: Generate a strong secret with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Minimum 32 characters recommended for security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-MUST-BE-AT-LEAST-32-CHARACTERS
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Firebase Configuration
FIREBASE_SERVER_KEY=your-firebase-server-key

# MQTT Configuration (for IoT)
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USER=
MQTT_PASS=

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=kavach-uploads
AWS_REGION=ap-south-1

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Gemini AI (Add-on 3)
GEMINI_API_KEY=your-gemini-api-key

# CORS Origins
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Phase 3.4.4: Security & Compliance
# Encryption key (64 hex characters / 32 bytes) - RECOMMENDED for production
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# If not set, a random key will be generated on each restart (data encrypted with old key becomes unreadable)
# ENCRYPTION_KEY=your-64-character-hex-encryption-key-here

# Phase 3.4.3: Communication Services (Optional)
# SMS Configuration (Twilio) - Optional
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (SMTP) - Optional
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@kavach.com

